<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlacePickerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:textSize="18sp"
        android:layout_toEndOf="@+id/textView"
        android:textColor="@android:color/black"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView2"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch Place Picker"
        android:id="@+id/pickerButton"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:text="Selected Place:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/menubar"
        android:layout_alignParentBottom="true"
        android:background="#75B095"
        android:baselineAligned="false">

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/profile"
            android:padding="10dp"
            android:text="Profile"
            android:textSize="12sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/friends"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/friends"
            android:padding="10dp"
            android:text="Friends"
            android:textSize="12sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnMaps"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_map_black_24dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:text="Maps"
            android:textSize="12sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnAlerts"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/alerts"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:text="Alerts"
            android:textSize="12sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/setting"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_settings_black_24dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:text="Settings"
            android:textSize="12sp"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>