<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/map"
        android:layout_alignParentStart="true"
        android:layout_margin="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="?attr/colorPrimary"
        android:elevation="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingTop="0dp"
        android:theme="?attr/actionBarTheme" />

    <fragment
        android:id="@+id/autocomplete_fragment"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/map"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="0dp" />

    <!--<ImageButton
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/toolbar3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:elevation="0dp"
        android:minHeight="0dp"
        android:padding="15dp"
        android:scaleType="centerCrop"
        android:src="?android:attr/actionModeWebSearchDrawable" />-->

    <fragment
        android:layout_width="match_parent"
        android:layout_height="484dp"
        android:id="@+id/map"
        tools:context="com.example.gurpreetsingh.encircleme.MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_weight="1"
        android:layout_below="@+id/search"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/menubar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/menubar"
        android:layout_alignParentBottom="true"
        android:background="#75B095"
        android:baselineAligned="false"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/btnProfile"
            android:src="@drawable/profile"
            android:scaleType="centerCrop"
            android:background="@color/colorPrimary"
            android:padding="20dp"
            android:minHeight="0dp"
            android:elevation="0dp"
            android:layout_width="78dp"
            android:layout_height="60dp" />

        <ImageButton
            android:id="@+id/friends"
            android:background="@color/colorPrimary"
            android:src="@drawable/friends"
            android:scaleType="centerCrop"
            android:padding="15dp"
            android:elevation="0dp"
            android:minHeight="0dp"
            android:layout_weight="0.55"
            android:layout_width="78dp"
            android:layout_height="60dp" />

        <ImageButton
            android:id="@+id/btnMaps"
            android:background="@color/colorPrimary"
            android:src="@drawable/map"
            android:scaleType="centerCrop"
            android:padding="20dp"
            android:elevation="0dp"
            android:minHeight="0dp"
            android:layout_width="78dp"
            android:layout_height="60dp" />

        <ImageButton
            android:id="@+id/btnAlerts"
            android:src="@drawable/alerts"
            android:scaleType="centerCrop"
            android:background="@color/colorPrimary"
            android:padding="20dp"
            android:elevation="0dp"
            android:minHeight="0dp"
            android:layout_width="78dp"
            android:layout_height="60dp" />

        <ImageButton
            android:id="@+id/setting"
            android:src="@drawable/settings"
            android:scaleType="centerCrop"
            android:background="@color/colorPrimary"
            android:padding="20dp"
            android:elevation="0dp"
            android:minHeight="0dp"
            android:layout_width="78dp"
            android:layout_height="60dp" />

    </LinearLayout>


</RelativeLayout>
