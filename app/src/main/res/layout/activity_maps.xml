<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <fragment
        android:id="@+id/autocomplete_fragment"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/map"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/search" />

    <ImageButton
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:elevation="0dp"
        android:minHeight="0dp"
        android:padding="15dp"
        android:scaleType="centerCrop"
        android:src="?android:attr/actionModeWebSearchDrawable"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <fragment
        android:layout_width="match_parent"
        android:layout_height="484dp"
        android:id="@+id/map"
        tools:context="com.example.gurpreetsingh.encircleme.MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_weight="1"
        android:layout_below="@+id/search"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/menubar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/menubar"
        android:layout_alignParentBottom="true"
        android:background="#75B095"
        android:baselineAligned="false"
        android:weightSum="1">

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_weight="1.31"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/profile"
            android:padding="10dp"
            android:text="Profile"
            android:textIsSelectable="true"
            android:textSize="12sp" />

        <Button
            android:id="@+id/friends"
            android:layout_width="78dp"
            android:layout_height="60dp"
            android:layout_weight="0"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/friends"
            android:padding="10dp"
            android:text="Friends"
            android:textIsSelectable="true"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnMaps"
            android:layout_width="78dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_map_black_24dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:text="Maps"
            android:textIsSelectable="true"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnAlerts"
            android:layout_width="78dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/alerts"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:text="Alerts"
            android:textIsSelectable="true"
            android:textSize="12sp" />

        <Button
            android:id="@+id/setting"
            android:layout_width="78dp"
            android:layout_height="60dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_settings_black_24dp"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:text="Settings"
            android:textIsSelectable="true"
            android:textSize="12sp" />

    </LinearLayout>


</RelativeLayout>
