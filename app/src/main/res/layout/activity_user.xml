<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".UserActivity"
    android:orientation="horizontal">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp">


        <TextView
            android:id="@+id/text_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu"/>


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/menubar"
            android:layout_alignParentBottom="true"
            android:background="#75B095"
            android:baselineAligned="false">

            <Button
                android:id="@+id/btnProfile"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                android:drawableTop="@drawable/profile"
                android:padding="10dp"
                android:text="Profile"
                android:textSize="12sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/friends"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                android:drawableTop="@drawable/friends"
                android:padding="10dp"
                android:text="Friends"
                android:textSize="12sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnMaps"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                android:drawableTop="@drawable/ic_map_black_24dp"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:text="Maps"
                android:textSize="12sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnAlerts"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                android:drawableTop="@drawable/alerts"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:text="Alerts"
                android:textSize="12sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/setting"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                android:drawableTop="@drawable/ic_settings_black_24dp"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:text="Settings"
                android:textSize="12sp"
                android:layout_weight="1"/>

        </LinearLayout>

        <Button
            android:id="@+id/sign_out"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="@string/btn_sign_out"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:elevation="0dp"
            android:layout_above="@+id/menubar"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="14dp" />




    </RelativeLayout>

