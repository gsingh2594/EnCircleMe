<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gurpreetsingh.encircleme.PlaceActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/map_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" >

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/map_toolbar" />

    </android.support.v7.widget.Toolbar>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        android:layout_below="@id/map_toolbar"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nearby Music" />

            <Button
                android:id="@+id/btnArts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nearby Arts and Crafts" />

            <Button
                android:id="@+id/btnCafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nearby Cafe" />

            <Button
                android:id="@+id/btnNightclub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nearby Night Clubs"/>

            <Button
                android:id="@+id/btnRestaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nearby Restaurants" />

            <Button
                android:id="@+id/btnShoppingmalls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nearby Shopping" />

            <Button
                android:id="@+id/btnOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other" />

        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/buttons">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            tools:context="com.example.gurpreetsingh.encircleme.PlaceActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>