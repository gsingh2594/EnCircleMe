<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/profile_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:title="Profile"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/profile_toolbar">

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/cover_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop" />

                <!--<ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/cover_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-60dp"
                    android:background="@drawable/circle_with_border"
                    android:elevation="5dp"
                    android:padding="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_profile_photo" />-->

                <RelativeLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:background="@color/colorPrimary"
                    android:elevation="9dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="65dp"
                    android:layout_below="@+id/cover_image"
                    android:layout_alignParentStart="true">
                    <!--
                    <ImageView
                        android:id="@+id/add_friend_icon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_add_user"/>
                    -->

                    <TextView
                        android:id="@+id/user_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@android:color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="39dp" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Username"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/black"
                        android:textSize="14dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/user_profile_name" />

                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/view2"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_below="@id/cover_image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-90dp"
                    android:elevation="12dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9"
                    app:contentPadding="5dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="90dp"
                    app:cardElevation="20dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        app:cardCornerRadius="85dp">

                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_profile_photo" />
                    </android.support.v7.widget.CardView>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_layout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/profile_layout"
                        android:layout_margin="10dp">

                        <TextView
                            android:id="@+id/email_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/bb_inActiveBottomBarItemColor"
                            android:textSize="14dp"
                            android:layout_marginTop="11dp"
                            android:layout_below="@+id/user_profile_bio"
                            android:layout_alignParentStart="true" />

                        <ImageView
                            android:id="@+id/email_back"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/email_text"
                            android:elevation="2dp" />

                        <TextView
                            android:id="@+id/aboutme_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:text="About me"
                            android:elevation="3dp"
                            android:textColor="@color/bb_inActiveBottomBarItemColor"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/user_profile_bio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="About me"
                            android:textAlignment="center"
                            android:textColor="@android:color/black"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_below="@+id/aboutme_text"
                            android:layout_alignParentStart="true" />

                        <ImageView
                            android:id="@+id/edit_bio_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignTop="@+id/user_profile_bio"
                            android:layout_below="@+id/user_profile_bio"
                            android:layout_marginEnd="11dp"
                            android:elevation="0dp"
                            android:src="@drawable/edit" />

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/email_back"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:elevation="3dp"
                            android:text="Email"
                            android:textColor="@android:color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/phone_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/email_back"
                            android:layout_marginTop="10dp"
                            android:text="Phone #"
                            android:textColor="@color/bb_inActiveBottomBarItemColor"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/phone_back"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:elevation="2dp"
                            android:layout_below="@+id/phone_text"
                            android:layout_alignParentStart="true" />

                        <TextView
                            android:id="@+id/phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/phone_back"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:elevation="3dp"
                            android:text="Phone Number"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/interest_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:text="Interests"
                            android:textColor="@color/bb_inActiveBottomBarItemColor"
                            android:textSize="14dp"
                            android:layout_below="@+id/phone_back"
                            android:layout_alignParentStart="true" />


                        <HorizontalScrollView
                            android:id="@+id/relativeLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_below="@+id/interest_text"
                            android:layout_alignParentStart="true">

                            <LinearLayout
                                android:id="@+id/interests_linearlayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="50dp">

                                <TextView
                                    android:id="@+id/blank_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_below="@+id/interests_linearlayout"
                                    android:textColor="@color/bb_inActiveBottomBarItemColor"
                                    android:textSize="@dimen/text_large"
                                    android:textStyle="bold" />


